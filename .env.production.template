# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Database
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://zschool_user:your_secure_database_password_here@db:5432/zschool

# AI Services
HF_TOKEN=your_huggingface_token_here
XAI_TOKEN=your_xai_token_here

# Canvas LMS Integration
CANVAS_BEARER_TOKEN=your_canvas_bearer_token_here
CANVAS_USER_ID=your_canvas_user_id_here

# Application
ENVIRONMENT=production
DOMAIN=yourdomain.com

# Frontend
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_ENVIRONMENT=production

# Optional: SSL Configuration
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/private.key 